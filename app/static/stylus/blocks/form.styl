.form
  padding-top 7rem
  background $darkgray
  font-family $lightFont
  padding-bottom 5.8rem

  &--description
    color $white
    font-family $lightFont
    font-size 1.8rem
    font-weight 300
    text-align center
    width 56.5rem
    margin 0 auto
    padding-bottom 5.8rem

.input
  width 36rem
  height 4.9rem
  background-color $white
  border 0
  padding 1.4rem
  font-family $lightFont
  font-weight 300
  color $black
  outline: none
  transition: $fast
  &::placeholder
    color $gray
    font-size 1.8rem
    transition: $fast
    opacity 1
  &:hover
    box-shadow: .5rem .5rem .2rem 0rem rgba(0,0,0, .5)
    &::placeholder
      opacity 0.5
  &:focus
    box-shadow: 1rem 1rem .5rem 0rem rgba(0,0,0, .5)
    &::placeholder
      opacity 0
      font-size: 0

  &__text
    width 100%
    height 12.7rem

  &__btn
    font-family $lightFont
    font-size 1.8rem
    font-weight 300
    margin 0 auto
    height 4.7rem

.check
  position absolute
  left 0
  top 0
  display flex
  align-items center
  &::before
    content: ''
    display block
    position relative
    width 3.4rem
    height 3.4rem
    background $white
    margin-right 1rem
  &::after
    content: ''
    position absolute
    background url(../img/check-solid.svg) center no-repeat
    background-size cover
    width 3rem
    height 3rem
    left .2rem
    top .2rem
    opacity 0
    transition $fast
    transform scale(0)

.input__checkbox
  display none

  &:checked
    & + .check
      &::after
        opacity 1
        transform scale(1)