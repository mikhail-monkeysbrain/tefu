.amenities
  background $white
  padding-top 4rem

  &--description
    width 60.5rem
    text-align center
    margin 0 auto
    color $black
    font-family $lightFont
    font-size 1.8rem
    font-weight 300

  &--tabs
    .amenities--tabs--list
      display none
    &__pseudo
      border-top 1px solid $gray
      position relative
      margin-bottom 4rem
      margin-top 4.5rem
      &::after
        content: ''
        width: 100%
        height: 1px
        display: block
        background: $lightblue
        left: 0px
        position: absolute
      .slick-track
        display flex
        align-items flex-end
      .slick-slide
        padding-bottom 2.5rem
        padding-top 2rem
        border-bottom: 5px solid transparent
        transition: $middle
        height 10rem
        cursor pointer
        p
          color $black
          font-family $mainFont
          font-size 2.2rem
          font-weight 400
          transition: $fast
        .sprite
          transition: $fast
        &:hover
          .sprite
            transform: scale(1.1)
          p
            color $lightblue
        &.slick-current
          border-bottom: 5px solid $lightblue
      .slick-arrow
        position absolute
        top calc(50% - 2rem)
        font-size: 0
        background-color transparent
        cursor pointer
        z-index 1
        &.slick-prev
          left -6rem
          sprite($s_arrow_prew)
        &.slick-next
          right -6rem
          sprite($s_arrow_next)

    &--item
      outline: none
      p
        line-height 1
        margin-left 1rem
      &.slick-slide
        display flex
        justify-content center
        align-items center
      a
        display flex
        justify-content center
        align-items center
        color $black
        font-family $mainFont
        font-size 2.2rem
        font-weight 400
      &__s1
        sprite($s_s_1)
      &__s2
        sprite($s_s_2)
      &__s3
        sprite($s_s_3)
      &__s4
        sprite($s_s_4)
      &__s5
        sprite($s_s_5)

  &--tab
    p
      color $black
      font-family $lightFont
      font-size 1.8rem
      font-weight 300
      padding 3.6rem 0

    ul
      display grid
      grid-template-columns: 52% auto
      grid-template-rows: 1fr 1fr 1fr
      grid-template-areas: ". ." ". ." ". ."